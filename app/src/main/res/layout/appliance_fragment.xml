<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:scrollbars="none"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ApplianceFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#42a1f4"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view-1"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            card_view:cardBackgroundColor="#fff"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Light"
                android:layout_gravity="center"
                android:textSize="15sp"/>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view-2"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            card_view:cardBackgroundColor="#fff">

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Music System"
                android:layout_gravity="center"
                android:textSize="15sp"/>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view-3"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            card_view:cardBackgroundColor="#fff">

            <TextView
                android:id="@+id/fireAlarm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fire Alarm"
                android:layout_gravity="center"
                android:textSize="15sp"/>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view-4"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            card_view:cardBackgroundColor="#fff">

            <TextView
                android:id="@+id/Refrigerator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Refrigerator"
                android:layout_gravity="center"
                android:textSize="15sp"/>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view-6"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="#fff">

        <TextView
            android:id="@+id/Garage_door"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cooling System"
            android:layout_gravity="center"
            android:textSize="15sp"/>
    </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view-7"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                card_view:cardBackgroundColor="#fff">

                <TextView
                    android:id="@+id/television"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Television"
                    android:layout_gravity="center"
                    android:textSize="15sp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view-8"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                card_view:cardBackgroundColor="#fff">

                <TextView
                    android:id="@+id/toaster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Toaster"
                    android:layout_gravity="center"
                    android:textSize="15sp"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>